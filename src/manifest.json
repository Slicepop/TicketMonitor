{
    "name": "TicketMonitor",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "Refresh ticket board periodically and notify user of new tickets",
    "permissions": ["scripting", "activeTab", "storage", "tabs"],
    "action": {
        "default_icon": "favicon.png",
        "default_popup": "popup.html",
        "css": ["./styles.css"]
    },
    "background": {
        "page": "background.html",
        "service_worker": "background.js"
    },
    "host_permissions": ["https://*.wmed.edu/*"],
    "web_accessible_resources": [
        {
            "resources": ["popup.js", "favicon.ico"],
            "matches": ["https://support.wmed.edu/*"]
        }
    ],
    "content_scripts": [
        {
          "matches": ["https://support.wmed.edu/LiveTime/WebObjects/*"],
          "js": ["content.js"],
          "run_at": "document_idle"
        }
      ]
}